<!DOCTYPE html>
<html>

<head>
  <% include partials/commonhead %>
  <link rel="stylesheet" href="/stylesheets/choosewaiver.css">
</head>

<body>
  <% include partials/header %>
  <section id="choosewaiversection">
    <div class="container">
      <div class="row">
        <div class="col text-center mb-4">
          <h3 class="h3-responsive mb-4">Welcome Steve Doston</h3>
          <h2 class="h2-responsive underlined-heading h2">Choose a Waiver to Sign</h2>
        </div>
      </div>

      <div class="row my-4">
        <% for (var i = 0; i < waivers.length; i++) { %>
        <div class="col-md-4 col-sm-6 mb-4 mx-auto">
          <a href="/waiver/<%= waivers[i]._id %>">
            <div class="card card-cascade narrower">
              <div class="view view-cascade gradient-card-header info-color">
                <h4 class="mb-0 font-weight-500"><%= waivers[i].name %></h4>
              </div>
              <div class="card-body text-center px-4 mb-3">
                  <p class="card-text pb-2"><%= waivers[i].description %></p>
              </div>
            </div>
          </a>
        </div>
        <% } %>
      </div>
    </div>
  </section>

  <% include partials/footer %>
  <% include partials/commonscripts %>
</body>

</html>