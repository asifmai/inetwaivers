<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/commonhead %>
  <link rel="stylesheet" href="/stylesheets/admin.css">
</head>

<body>
  <div class="body-container login-container">
    <div class="login-logo">
      <img src="/images/logo.jpg" alt="iNetWaivers">
    </div>
    <div class="card card-container p-4">
      <h4 class="text-dark mb-2">Admin Login</h4>
      <img id="profile-img" class="profile-img-card mb-4" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
      <% include ../partials/messages %>
      <br>
      <form class="form-signin" method="POST" action="/admin/login" data-parsley-validate>
        <div class="form-group">
          <input type="email" name="email" id="email" class="form-control" placeholder="Email Address"
            data-parsley-required>
        </div>
        <div class="form-group">
          <input type="password" name="password" id="password" class="form-control" placeholder="Password"
          data-parsley-required data-parsley-minlength="6">
        </div>
        <button class="btn btn-primary btn-block btn-signin" type="submit">Sign in</button>
      </form><!-- /form -->
    </div><!-- /card-container -->
  </div>
  <% include ../partials/commonscripts %>
</body>

</html>